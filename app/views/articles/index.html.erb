<div class="container">
<div class="row">
 <% @articles.each do |article| %>
 <%= link_to article do %>
 
  <div class="col-md-12 margin-top-5per article-block">
  <% if article.image_id.present? %>
  <%= image_tag attachment_url(article, :image), class: 'img-responsive padding-top-15' %>
  <% else %>
  <%= image_tag 'noimage.png', class: 'img-responsive padding-top-15' %>
  <% end %>


  <div class="padding-bottom-15">
   <p class="title">
   <%= article.title %>
   </p>
   <p class="text-right">
   <%= article.created_at.strftime("%Y年%m月%d日") %>
   </p>
   </div>
  </div>  
  <% end %>
  
 <% end %>
</div>
<div class="pager">
 <%= paginate(@articles) %>
 </div>
</div>

